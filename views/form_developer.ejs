<div class="container mx-auto p-6 text-gray-900">
  <div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow-md">
    <h1 class="text-2xl font-bold mb-4 text-center"><%= developer ? 'Edit Developer' : 'Add a New Developer' %></h1>
    <form action="<%= developer ? `/developers/${developer.id}/edit` : '/developers/add' %>" method="POST" class="space-y-4" enctype="multipart/form-data">

      <!-- Dev profile picture -->
      <div class="flex items-center justify-center w-full">
        <% if (developer && developer.image_url) { %>
          <img src="<%= developer.image_url %>" alt="Profile picture" class="h-24 w-24 rounded-full mt-2 object-cover object-top">
        <% } %>
      </div>

      <!-- Name Field -->
      <div>
        <label for="name" class="block text-sm font-medium text-gray-700">Name:</label>
        <input type="text" id="name" name="name" value="<%= developer ? developer.name : '' %>" class="mt-1 px-4 py-2 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" required>
      </div>

      <!-- Location Field -->
      <div>
        <label for="location" class="block text-sm font-medium text-gray-700">Location:</label>
        <input type="text" id="location" name="location" value="<%= developer ? developer.location : '' %>" class="mt-1 px-4 py-2 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
      </div>

      <!-- Profile Picture Field -->
      <div>
        <label for="profile_picture" class="block text-sm font-medium text-gray-700">Profile Picture:</label>
        <input type="file" id="profile_picture" name="profile_picture" class="mt-1 px-4 py-2 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
      </div>

      <!-- Submit Button -->
      <div>
        <button type="submit" class="px-4 py-2 bg-indigo-600 text-white font-semibold rounded-md shadow-sm hover:bg-indigo-700 w-full">
          <%= developer ? 'Update Developer' : 'Add Developer' %>
        </button>
      </div>

      <% if (errors) { %>
        <ul class="text-red-600">
          <% errors.forEach(function(error) { %>
            <li><%= error.msg %></li>
          <% }) %>
        </ul>
      <% } %>
    </form>
  </div>
</div>

