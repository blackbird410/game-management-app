<!-- views/purchase_history.ejs -->

<h1 class="text-2xl font-bold mb-4 text-center">Your Purchase History</h1>

<% if (purchases.length > 0) { %>
  <div class="space-y-4">
    <% purchases.forEach(purchase => { %>
      <div class="bg-gray-100 p-4 rounded-lg shadow-sm">
        <div class="flex items-center">
          <img src="<%= purchase.game.image_url %>" alt="<%= purchase.game.title %>" class="w-24 h-24 object-cover rounded-lg">
          <div class="ml-4">
            <h2 class="text-xl font-semibold"><%= purchase.game.title %></h2>
            <p class="text-gray-600"><strong>Quantity:</strong> <%= purchase.quantity %></p>
            <p class="text-gray-600"><strong>Price per unit:</strong> <%= purchase.price %></p>
            <p class="text-gray-600"><strong>Purchase Date:</strong> <%= new Date(purchase.purchase_date).toLocaleDateString() %></p>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
<% } else { %>
  <p class="text-center text-gray-600">You have not purchased any games yet.</p>
<% } %>

