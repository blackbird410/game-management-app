
<% layout('layouts/dashboard.ejs') %>

<h1 class="text-3xl font-bold text-gray-800 mb-8 text-center">Admin Dashboard</h1>

<div class="grid grid-cols-1 md:grid-cols-3 gap-6">
  <!-- Users Count Card -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold text-gray-700 mb-4">Total Users</h2>
    <p class="text-4xl text-center font-bold text-gray-900"><%= usersCount %></p>
    <a href="/admin/users" class="block mt-4 text-center bg-blue-600 text-white py-2 px-4 rounded-md shadow-sm hover:bg-blue-700">
      Manage Users
    </a>
  </div>

  <!-- Developers Count Card -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold text-gray-700 mb-4">Total Developers</h2>
    <p class="text-4xl text-center font-bold text-gray-900"><%= developersCount %></p>
    <a href="/admin/developers" class="block mt-4 text-center bg-green-600 text-white py-2 px-4 rounded-md shadow-sm hover:bg-green-700">
      Manage Developers
    </a>
  </div>

  <!-- Games Count Card -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <h2 class="text-xl font-semibold text-gray-700 mb-4">Total Games</h2>
    <p class="text-4xl text-center font-bold text-gray-900"><%= gamesCount %></p>
    <a href="/admin/games" class="block mt-4 text-center bg-purple-600 text-white py-2 px-4 rounded-md shadow-sm hover:bg-purple-700">
      Manage Games
    </a>
  </div>
</div>

